<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<navigation-rule>
		<display-name>views/auth/login.xhtml</display-name>
		<from-view-id>/views/auth/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/views/pages/welcome.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
  <navigation-rule>
		<display-name>views/auth/login.xhtml</display-name>
		<from-view-id>/views/auth/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>errorLogin</from-outcome>
			<to-view-id>/views/error/errorLogin.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
  <navigation-rule>
  	<display-name>views/error/errorLogin.xhtml</display-name>
  	<from-view-id>/views/error/errorLogin.xhtml</from-view-id>
  	<navigation-case>
  		<from-outcome>register</from-outcome>
  		<to-view-id>/views/auth/register.xhtml</to-view-id>
  		<redirect />
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<display-name>views/error/errorLogin.xhtml</display-name>
  	<from-view-id>/views/error/errorLogin.xhtml</from-view-id>
  	<navigation-case>
  		<from-outcome>login</from-outcome>
  		<to-view-id>/views/auth/login.xhtml</to-view-id>
  		<redirect />
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<display-name>views/auth/register.xhtml</display-name>
  	<from-view-id>/views/auth/register.xhtml</from-view-id>
  	<navigation-case>
  		<from-outcome>login</from-outcome>
  		<to-view-id>/views/auth/login.xhtml</to-view-id>
  		<redirect />
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<display-name>views/auth/register.xhtml</display-name>
  	<from-view-id>/views/auth/register.xhtml</from-view-id>
  	<navigation-case>
  		<from-outcome>registred</from-outcome>
  		<to-view-id>/views/auth/registred.xhtml</to-view-id>
  		<redirect />
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<display-name>views/auth/login.xhtml</display-name>
  	<from-view-id>/views/auth/login.xhtml</from-view-id>
  	<navigation-case>
  		<from-outcome>register</from-outcome>
  		<to-view-id>/views/auth/register.xhtml</to-view-id>
  		<redirect />
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<display-name>views/auth/registred.xhtml</display-name>
  	<from-view-id>/views/auth/registred.xhtml</from-view-id>
  	<navigation-case>
  		<from-outcome>login</from-outcome>
  		<to-view-id>/views/auth/login.xhtml</to-view-id>
  		<redirect />
  	</navigation-case>
  </navigation-rule>
</faces-config>
